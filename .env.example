#? Configuración de Flask
# FLASK_APP: Archivo de entrada de la aplicación
FLASK_APP=wsgi.py
# FLASK_ENV: Entorno (development o production)
FLASK_ENV=production
# SECRET_KEY: Clave para cifrar sesiones y cookies (usar algo aleatorio y seguro)
SECRET_KEY=your-secret-key-here
# WTF_CSRF_SECRET_KEY: Clave para protección CSRF en formularios
WTF_CSRF_SECRET_KEY=your-csrf-secret-key-here

# Base de Datos
# Formato: mariadb+mariadbconnector://usuario:contraseña@servidor:puerto/nombre_db
DATABASE_URL=mariadb+mariadbconnector://user:password@localhost:3306/dbname

#? Configuración de Correo (SMTP)
# MAIL_SERVER: Servidor de correo saliente
MAIL_SERVER=smtp.example.com
# MAIL_PORT: Puerto SMTP (587 para TLS, 465 para SSL)
MAIL_PORT=587
# MAIL_USE_TLS: Activar cifrado TLS
MAIL_USE_TLS=True
# MAIL_USE_SSL: Activar cifrado SSL
MAIL_USE_SSL=False
# MAIL_USERNAME: Usuario de la cuenta de correo
MAIL_USERNAME=user@example.com
# MAIL_PASSWORD: Contraseña de la cuenta de correo
MAIL_PASSWORD=your-password-here
# MAIL_DEFAULT_SENDER: Dirección que aparecerá como remitente
MAIL_DEFAULT_SENDER=noreply@example.com

#? Configuración de MinIO (Almacenamiento de archivos)
# MINIO_ENDPOINT: URL del servidor MinIO
MINIO_ENDPOINT=localhost:9000
# MINIO_ACCESS_KEY: Usuario/Llave de acceso de MinIO
MINIO_ACCESS_KEY=minioadmin
# MINIO_SECRET_KEY: Contraseña/Llave secreta de MinIO
MINIO_SECRET_KEY=minioadmin
# MINIO_SECURE: True si usas HTTPS, False para HTTP local
MINIO_SECURE=False
# MINIO_BUCKET_NAME: Nombre del cubo (bucket) donde se guardarán los archivos
MINIO_BUCKET_NAME=your-bucket-name
# MINIO_PUBLIC_URL: URL pública para acceder a las imágenes
MINIO_PUBLIC_URL=http://localhost:9000

#? URL del Frontend (Astro)
FRONTEND_URL=http://localhost:5173

#? Configuración de Redis (Caché y tareas)
# Si REDIS_URL está presente, tiene prioridad sobre REDIS_HOST/PORT/DB/PASSWORD.
# Formato con password: redis://:PASSWORD@HOST:PORT/DB
REDIS_URL=
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

#? Directorio para métricas de Prometheus (entornos multiproceso)
PROMETHEUS_MULTIPROC_DIR=/tmp/prometheus_multiproc_dir

#? Ajustes de CORS
# CORS_ORIGINS: URLs permitidas para hacer peticiones a la API (separadas por comas)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

#? Variables Públicas del Frontend (usadas si se comparte el .env en la raíz)
PUBLIC_API_BASE_URL=http://localhost:5000/api
